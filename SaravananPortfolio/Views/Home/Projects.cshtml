    Layout = "_Layout";
}

<div class="page-section">
    <div class="container">

        <h2 class="section-title text-center mb-5">Projects</h2>

        <div class="row g-4">

            <!-- Project 1 -->
            <div class="col-md-6">
                <div class="content-card h-100">
                    <h4>Student Record Management System</h4>

